Task#6.9

print("CALCULATOR")
print("1-Add")
print("2-Substract")
print("3-Multiply")
print("4-Divide")
n=int(input("Enter the option(1-4):"))
while n>0:
    if n==1:
        a=int(input("Enter a:"))
        b=int(input("Enter b:"))
        print("sum: " , a+b)
    elif n==2:
        a=int(input("Enter a:"))
        b=int(input("Enter be:"))
        print("Sub: " , a-b)
    elif n==3:
        a=int(input("Enter a:"))
        b=int(input("Enter b:"))
        print("Mul: " , a*b)
    elif n==4:
        a=int(input("Enter a:"))
        b=int(input("Enter b:"))
        print("Div: " , a//b)
    else:
        print("Invalid Operation")
n=int(input())
